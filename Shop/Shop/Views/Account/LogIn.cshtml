@model Shop.ViewModels.LoginViewModel

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}


<div>
    @using (Html.BeginForm("LogIn", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <table id="book-description" style="margin-left: auto; margin-right: auto;">
            <caption>LogIn</caption>
            <tr>
                <td>@Html.LabelFor(o => o.Email, "E-mail:")</td>
                <td>
                    @Html.TextBoxFor(o => o.Email)
                    <div style="color:red;">
                        @Html.ValidationMessageFor(o => o.Email)
                    </div>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.Password, "Password")</td>
                <td>
                    @Html.PasswordFor(o => o.Password)
                    <div style="color:red;">
                        @Html.ValidationMessageFor(o => o.Password)
                    </div>
                </td>
                <td></td>
            </tr>
            <tr>
                <td colspan="3">
                    <div style="margin-bottom: 10px;">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @checked = "checked" })
                        @Html.LabelFor(m => m.RememberMe)
                    </div>

                    <input type="submit" value="LogIn" class="submitLink" style="height: 40px;" />
                </td>
            </tr>
        </table>
    }

    <div style="text-align:center;">
        <a class="submitLink" href="@Url.Action("Register")">I want to register.</a>
    </div>
</div>

